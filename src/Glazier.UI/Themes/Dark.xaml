<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ImageBrush x:Key="MainWindowBackgroundBrush" ImageSource="/Images/Background3-Dark.png" Stretch="UniformToFill"/>
    <ImageBrush x:Key="ColorPickerBackgroundBrush" ImageSource="/Images/Background-ColorPicker.png" Stretch="UniformToFill" Opacity=".2" />

    <SolidColorBrush x:Key="CheckerboardBackgroundBrush" Color="DimGray"/>
    <SolidColorBrush x:Key="CheckerboardForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="ToggleButtonSelectedOutlineBrush" Color="Blue"/>
    <SolidColorBrush x:Key="ToggleButtonSelectedMouseOverBrush" Color="Red"/>
    <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="LightGray"/>
    <SolidColorBrush x:Key="ToolbarBorderBrush" Color="DarkGray"/>


    <LinearGradientBrush x:Key="SplitterBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="OrangeRed" Offset="0"/>
        <GradientStop Color="Red" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="OuterBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="DarkRed" Offset="0"/>
        <GradientStop Color="Black" Offset=".5"/>
        <GradientStop Color="DarkRed" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="FormGroupBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="DarkBlue" Offset="0"/>
        <GradientStop Color="#000099" Offset="1"/>
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="ContrastyBackgroundBrush" StartPoint="0,0" EndPoint="1,1" Opacity=".4">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="Black" Offset=".5"/>
        <GradientStop Color="Black" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="FormLabelForeground" Color="Yellow" />
</ResourceDictionary>
 
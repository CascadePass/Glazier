<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ImageBrush x:Key="MainWindowBackgroundBrush" ImageSource="/Images/Background2-Dark.png" Stretch="UniformToFill"/>
    <ImageBrush x:Key="ColorPickerBackgroundBrush" ImageSource="/Images/Background-ColorPicker.png" Stretch="UniformToFill" Opacity=".2" />

    <LinearGradientBrush x:Key="OuterBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="OrangeRed" Offset="0"/>
        <GradientStop Color="Gold" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="FormGroupBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="DarkGreen" Offset="0"/>
        <GradientStop Color="Green" Offset="1"/>
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="ContrastyBackgroundBrush" StartPoint="0,0" EndPoint="1,1" Opacity=".4">
        <GradientStop Color="Green" Offset="0"/>
        <GradientStop Color="ForestGreen" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="FormLabelForeground" Color="White" />
</ResourceDictionary>
 
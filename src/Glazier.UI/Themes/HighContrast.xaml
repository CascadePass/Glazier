<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainWindowBackgroundBrush" Color="{DynamicResource SystemColors.WindowColor}"/>
    <SolidColorBrush x:Key="ColorPickerBackgroundBrush" Color="{DynamicResource SystemColors.WindowColor}"/>

    <SolidColorBrush x:Key="CheckerboardBackgroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="CheckerboardForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ToggleButtonSelectedOutlineBrush" Color="Gray"/>
    <SolidColorBrush x:Key="ToggleButtonSelectedMouseOverBrush" Color="Black"/>
    <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="LightGray"/>
    <SolidColorBrush x:Key="ToolbarBorderBrush" Color="DarkGray"/>
    <SolidColorBrush x:Key="MouseOverImageBorderBrush" Color="{DynamicResource SystemColors.ActiveBorder}"/>


    <SolidColorBrush x:Key="SplitterBrush" Color="{DynamicResource SystemColors.ControlDark}" />

    <SolidColorBrush x:Key="OuterBorderBrush" Color="{DynamicResource SystemColors.ControlDark}"/>
    <SolidColorBrush x:Key="FormGroupBorderBrush" Color="{DynamicResource SystemColors.ActiveBorder}"/>
    <SolidColorBrush x:Key="ContrastyBackgroundBrush" Color="{DynamicResource SystemColors.HighlightColor}"/>

    <SolidColorBrush x:Key="FormLabelForeground" Color="{DynamicResource SystemColors.HighlightTextColor}" />
</ResourceDictionary>